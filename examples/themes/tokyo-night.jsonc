// Tokyo Night Den Shell Theme
// Popular Tokyo Night color scheme
{
  "theme": {
    "name": "tokyo-night",
    "colorScheme": "dark",
    "description": "Tokyo Night color scheme - modern and vibrant",

    "colors": {
      // Tokyo Night base colors
      "primary": "#7aa2f7",       // Blue
      "secondary": "#9ece6a",     // Green
      "background": "#1a1b26",    // Dark background
      "foreground": "#c0caf5",    // Light foreground

      "success": "#9ece6a",       // Green
      "warning": "#e0af68",       // Orange
      "error": "#f7768e",         // Red
      "info": "#7dcfff",          // Cyan
      "muted": "#565f89",         // Comment grey

      // Extended Tokyo Night colors
      "magenta": "#bb9af7",
      "purple": "#9d7cd8",
      "teal": "#1abc9c",
      "orange": "#ff9e64",
      "blue0": "#3d59a1",
      "blue7": "#394b70"
    },

    "prompt": {
      "template": " {user}@{host}  {cwd}  {git_branch}{git_status}  {modules} {symbol} ",
      "modern": true,

      "symbols": {
        "success": "‚ûú",
        "error": "‚úó",
