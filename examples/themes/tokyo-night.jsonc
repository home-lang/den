        "symbol": {
          "success": "primary",
          "error": "error",
          "root": "warning"
        }
      }
    },

    "syntax": {
      "enabled": true,
      "colors": {
        "command": "primary",
        "builtin": "info",
        "argument": "foreground",
        "flag": "orange",
        "option": "warning",
        "string": "success",
        "number": "orange",
        "operator": "muted",
        "variable": "magenta",
        "comment": "muted",
        "error": "error",
        "path": "info",
        "executable": "primary",
        "keyword": "purple"
      }
    },

    "git": {
      "colors": {
        "branch": "magenta",
        "clean": "success",
        "dirty": "warning",
        "conflict": "error",
        "ahead": "info",
        "behind": "orange",
        "stash": "purple"
