{
  // Den Shell Configuration
  // This file can be placed in:
  // - ./den.jsonc (project local)
  // - ./config/den.jsonc
  // - ./.config/den.jsonc
  // - ~/.config/den.jsonc (user home)

  // General settings
  "verbose": false,
  "stream_output": null,

  // Prompt configuration
  "prompt": {
    "format": "{path}{git} {modules} \n{symbol} ",
    "show_git": true,
    "show_time": false,
    "show_user": false,
    "show_host": false,
    "show_path": true,
    "show_exit_code": true,
    "right_prompt": null,
    "transient": false,
    "simple_when_not_tty": true
  },

  // History configuration
  "history": {
    "max_entries": 50000,
    "file": "~/.den_history",
    "ignore_duplicates": true,
    "ignore_space": true,
    "search_mode": "fuzzy",
    "search_limit": null
  },

  // Completion configuration
  "completion": {
    "enabled": true,
    "case_sensitive": false,
    "show_descriptions": true,
    "max_suggestions": 15,
    "cache": {
      "enabled": true,
      "ttl": 3600000,
      "max_entries": 1000
    }
  },

  // Theme configuration
  "theme": {
    "name": "default",
    "auto_detect_color_scheme": true,
    "enable_right_prompt": true,
    "colors": {
      "primary": "#00D9FF",
      "secondary": "#FF6B9D",
      "success": "#00FF88",
      "warning": "#FFD700",
      "err": "#FF4757",
      "info": "#74B9FF"
    },
    "symbols": {
      "prompt": "❯",
      "continuation": "…"
    }
  },

  // Expansion configuration
  "expansion": {
    "cache_limits": {
      "arg": 200,
      "exec": 500,
      "arithmetic": 500
    }
  },

  // Alias configuration
  "aliases": {
    "enabled": true,
    "custom": [
      // Navigation
      { "name": "..", "command": "cd .." },
      { "name": "...", "command": "cd ../.." },
      { "name": "....", "command": "cd ../../.." },
      { "name": "-", "command": "cd -" },

      // List files (use absolute paths to avoid circular alias)
      { "name": "l", "command": "/bin/ls -lah" },
      { "name": "la", "command": "/bin/ls -lAh" },
      { "name": "ll", "command": "/bin/ls -lh" },
      { "name": "ls", "command": "/bin/ls --color=auto" },

      // Git shortcuts
      { "name": "g", "command": "git" },
      { "name": "ga", "command": "git add" },
      { "name": "gaa", "command": "git add --all" },
      { "name": "gb", "command": "git branch" },
      { "name": "gc", "command": "git commit -v" },
      { "name": "gcm", "command": "git commit -m" },
      { "name": "gco", "command": "git checkout" },
      { "name": "gd", "command": "git diff" },
      { "name": "gf", "command": "git fetch" },
      { "name": "gl", "command": "git pull" },
      { "name": "gp", "command": "git push" },
      { "name": "gst", "command": "git status" },
      { "name": "glog", "command": "git log --oneline --graph" },

      // Safety (use absolute paths to avoid circular alias)
      { "name": "rm", "command": "/bin/rm -i" },
      { "name": "cp", "command": "/bin/cp -i" },
      { "name": "mv", "command": "/bin/mv -i" },

      // Misc
      { "name": "c", "command": "clear" },
      { "name": "h", "command": "history" },
      { "name": "j", "command": "jobs -l" },
      { "name": "grep", "command": "/usr/bin/grep --color=auto" },
      { "name": "df", "command": "/bin/df -h" },
      { "name": "du", "command": "/usr/bin/du -h" },
      { "name": "free", "command": "free -h" },
      { "name": "ports", "command": "netstat -tulanp" },
      { "name": "path", "command": "echo $PATH | tr ':' '\\n'" }
    ],
    // Suffix aliases (zsh-style): typing "hello.ts" runs "bun hello.ts"
    // Use: alias -s ts='bun' to add more at runtime
    "suffix": [
      // TypeScript/JavaScript with Bun
      { "extension": "ts", "command": "bun" },
      { "extension": "tsx", "command": "bun" },
      { "extension": "js", "command": "bun" },
      { "extension": "jsx", "command": "bun" },
      { "extension": "mjs", "command": "bun" },
      { "extension": "mts", "command": "bun" },

      // Python
      { "extension": "py", "command": "python3" },

      // Shell scripts
      { "extension": "sh", "command": "bash" },
      { "extension": "zsh", "command": "zsh" },

      // Ruby
      { "extension": "rb", "command": "ruby" },

      // Perl
      { "extension": "pl", "command": "perl" },

      // PHP
      { "extension": "php", "command": "php" },

      // Lua
      { "extension": "lua", "command": "lua" }
    ]
  },

  // Keybinding configuration
  "keybindings": {
    "mode": "emacs",
    "custom": null
  }
}
