{
  "name": "den",
  "type": "module",
  "version": "0.1.0",
  "description": "A performant & customizable, cross-platform shell for your terminal.",
  "author": "Chris Breuer <chris@stacksjs.org>",
  "license": "MIT",
  "homepage": "https://github.com/stacksjs/den#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stacksjs/den.git"
  },
  "bugs": {
    "url": "https://github.com/stacksjs/den/issues"
  },
  "keywords": ["typescript", "shell", "cross-platform", "bun"],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./*": {
      "import": "./dist/*"
    }
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "den": "./dist/bin/cli.js"
  },
  "files": ["README.md", "dist"],
  "scripts": {
    "build": "bun --bun build.ts",
    "compile": "bun build ./bin/cli.ts --compile --minify --outfile bin/den",
    "compile:all": "bun run compile:linux-x64 && bun run compile:linux-arm64 && bun run compile:windows-x64 && bun run compile:darwin-x64 && bun run compile:darwin-arm64",
    "compile:linux-x64": "bun build ./bin/cli.ts --compile --minify --target=bun-linux-x64 --outfile bin/den-linux-x64",
    "compile:linux-arm64": "bun build ./bin/cli.ts --compile --minify --target=bun-linux-arm64 --outfile bin/den-linux-arm64",
    "compile:windows-x64": "bun build ./bin/cli.ts --compile --minify --target=bun-windows-x64 --outfile bin/den-windows-x64.exe",
    "compile:darwin-x64": "bun build ./bin/cli.ts --compile --minify --target=bun-darwin-x64 --outfile bin/den-darwin-x64",
    "compile:darwin-arm64": "bun build ./bin/cli.ts --compile --minify --target=bun-darwin-arm64 --outfile bin/den-darwin-arm64",
    "zip": "bun run zip:all",
    "zip:all": "bun run zip:linux-x64 && bun run zip:linux-arm64 && bun run zip:windows-x64 && bun run zip:darwin-x64 && bun run zip:darwin-arm64",
    "zip:linux-x64": "zip -j bin/den-linux-x64.zip bin/den-linux-x64",
    "zip:linux-arm64": "zip -j bin/den-linux-arm64.zip bin/den-linux-arm64",
    "zip:windows-x64": "zip -j bin/den-windows-x64.zip bin/den-windows-x64.exe",
    "zip:darwin-x64": "zip -j bin/den-darwin-x64.zip bin/den-darwin-x64",
    "zip:darwin-arm64": "zip -j bin/den-darwin-arm64.zip bin/den-darwin-arm64",
    "fresh": "bunx rimraf node_modules/ bun.lock && bun i",
    "prepublishOnly": "bun --bun run build && bun run compile:all && bun run zip",
    "test": "bun test",
    "lint": "bunx --bun pickier lint . --config pickier.config.ts --max-warnings 9999",
    "lint:fix": "bunx --bun pickier lint . --fix --config pickier.config.ts --max-warnings 9999",
    "format": "bunx --bun pickier format . --config pickier.config.ts",
    "format:fix": "bunx --bun pickier format . --write --config pickier.config.ts",
    "changelog": "bunx logsmith --verbose",
    "changelog:generate": "bunx logsmith --output CHANGELOG.md",
    "release": "bun run changelog:generate && bunx bumpx prompt --recursive",
    "postinstall": "bunx git-hooks",
    "dev:docs": "bun --bun vitepress dev docs",
    "build:docs": "bun --bun vitepress build docs",
    "preview:docs": "bun --bun vitepress preview docs",
    "typecheck": "bun --bun tsc --noEmit",
    "bench": "bun --bun benchmark/index.ts"
  },
  "devDependencies": {
    "@stacksjs/bumpx": "^0.1.17",
    "@stacksjs/docs": "^0.70.23",
    "@stacksjs/gitlint": "^0.1.5",
    "@stacksjs/logsmith": "^0.1.8",
    "@types/bun": "^1.2.20",
    "buddy-bot": "^0.9.4",
    "bun-git-hooks": "^0.2.19",
    "bun-plugin-dtsx": "0.9.5",
    "bunfig": "^0.15.0",
    "typescript": "^5.9.2"
  },
  "overrides": {
    "unconfig": "0.3.10"
  },
  "git-hooks": {
    "pre-commit": {
      "staged-lint": {
        "*.{js,ts,json,yaml,yml,md}": "bunx --bun pickier lint --fix"
      }
    },
    "commit-msg": "bunx gitlint --edit .git/COMMIT_EDITMSG"
  }
}
